{% extends 'base.tmpl' %}
{% import 'feeds_translations_helper.tmpl' as feeds_translations with context %}

{% block title %}
{{ title|e }}
{% endblock title %}

{% block page_title %}
{{ title|e }}
{% endblock page_title %}

{% block page_description %}
{{ description }}
{% endblock page_description %}

{% block content %}
<main class="content">
    {% if subcategories %}
    {{ messages('Subcategories:') }}
    <ul>
        {% for name, link in subcategories %}
        <li><a href="{{ link }}">{{ name|e }}</a></li>
        {% endfor %}
    </ul>
    {% endif %}
    <div class="metadata">
        {{ feeds_translations.feed_link(tag, kind=kind) }}
    </div>
    {{ feeds_translations.translation_link(kind) }}
    {% if posts %}
        <ul class="postlist">
        {% for post in posts %}
            <li><a href="{{ post.permalink() }}" class="listtitle">{{ post.title()|e }}</a> â€” <time datetime="{{ post.formatted_date('webiso') }}" title="{{ post.formatted_date(date_format)|e }}">{{ post.formatted_date(date_format)|e }}</time></li>
        {% endfor %}
        </ul>
    {% endif %}
</main>
{% endblock %}
